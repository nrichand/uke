{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".gitignore",
      ".firebaserc",
      "database.rules.json"
    ],
    "redirects": [ {
      "source" : "/listing.html",
      "destination" : "/index.html",
      "type" : 301
    }],
    "headers": [ {
	      "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
	      "headers" : [ {
	        "key" : "Cache-Control",
	        "value" : "max-age=172800"
	      } ]
	    },
	    {
	      "source" : "https://img.youtube.com/vi/*/0.jpg",
	      "headers" : [ {
	        "key" : "Cache-Control",
	        "value" : "max-age=172800"
	      } ]
	    }
    ]
  }
}
